<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_horizontal_margin"
    >

    <TextView
        android:id="@+id/tv_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/tv_money"
        tools:text="现金"/>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_item_margin"
        android:textColor="#ff8635"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/tv_payment"
        tools:text="10"/>

    <TextView
        android:id="@+id/tv_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_item_margin"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/tv_payment"
        tools:text="饮料 - 奶茶"/>
    
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_item_margin"
        app:layout_constraintTop_toBottomOf="@id/tv_project"
        tools:text="2018-02-24"/>

</android.support.constraint.ConstraintLayout>