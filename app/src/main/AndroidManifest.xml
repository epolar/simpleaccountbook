<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="xyz.eraise.simpleaccountbook">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.tally.add.AddTallyActivity"
                  android:windowSoftInputMode="stateHidden|adjustNothing"/>
        <activity android:name=".ui.tally.list.TallyListActivity"/>

        <activity android:name=".ui.payment.add.AddPaymentActivity"/>
        <activity android:name=".ui.payment.list.PaymentListActivity"/>

        <activity android:name=".ui.accountbook.add.AddAccountBookActivity"/>
        <activity android:name=".ui.accountbook.list.AccountBookListActivity"/>

        <activity android:name=".ui.category.add.AddCategoryActivity"/>
        <activity android:name=".ui.category.list.CategoryListActivity"/>
    </application>

</manifest>